/* Pages/Send/send.wxss */
.input-placeholder {
  font-size: 30rpx;
}
.search-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #c20b0d;
  color: #FFF;
  height: 80rpx;
  padding: 10rpx 20rpx;
  z-index: 100
}
.search-container input {
  display: flex;
  justify-content: center;
  background: #FFF;
  color: #AAA;
  padding: 5px 70rpx;
  height: 40rpx;
  width: 65%;
  border-radius: 20px;
  z-index: -1;
}
.search-container icon.search {
  position: absolute;
  z-index: 10;
  top: 50%;
  margin-top: -14rpx;
  left: 16%;
}
.search-container icon.close {
  position: absolute;
  z-index: 10;
  top: 50%;
  margin-top: -15rpx;
  right: 17%;
}
.microphone {
  width: 25px;
  height: 25px;
  float: left;
  padding: 5rpx 25rpx 10rpx 0rpx;
}
.play_status {
  width: 30px;
  height: 30px;
  float: right;
  padding: 5rpx 0rpx 5rpx 30rpx;
}
.swiper-container {
  margin: 10px 10px;
  height: 110px
}
.slide-image {
  width: 100%;
  /* height: 100%; */
  position: relative;
  border-radius: 5px;
}

.rec_nav {
  display: flex; 
  width: 100%;
  border-bottom: 1rpx solid #eee
}
.rec_nav view {
  flex: auto;
  position: relative
}
.rec_nav navigator {
  padding: 25rpx 0;
  font-size: 25rpx;
  text-align: center;
}
.recn_ico {
  width: 100rpx;
  height: 100rpx;
  line-height: 110rpx;
  font-size: 22rpx;
  color: #c20b0d;
  border: 1rpx solid #c20b0d;
  border-radius: 50%;
  margin:0 auto 20rpx;
  font-weight: 300
}
.recn_ico image {
  width: 100rpx;
  height: 100rpx;
}
.recn_ico .calendar {
  background-image: url("data:image/png;base64,");
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  background-position: top -2rpx right 0rpx
}
.st_title {
  margin: 5px 10px
}
.st_title text {
  font-size: 15px
}
.flex-boxlist {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;
  /* border-bottom: 1rpx solid #eee; */
}
.flex-boxlist .tl_cnt {
  position: relative;
}
.flex-boxlist navigator {
  /* padding: 0 0 0 10px; */
  font-size: 22rpx;
  text-align: center;
  width: 105px;
  font-style: inherit
}
.flex-boxlist navigator .cover {
  width: 105px;
  height: 105px;
  line-height: 110rpx;
  font-size: 22rpx;
  position: relative;
}
.flex-boxlist .cover image {
  width: 105px;
  height: 105px;
  border-radius: 5px;
}
.flex-boxlist .cover .img_playcount {
  position: absolute;
  top: 0;
  right: 0;
}
.flex-boxlist .cover .img_playcount image {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 5px;
  right: 40px;
}
.flex-boxlist .cover .img_playcount text {
  position: absolute;
  top: -13px;
  left: -40px;
  color: #FFF
}
.flex-boxlist .cover .img_mvplayicon image {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 25%;
  right: 25%;
}
