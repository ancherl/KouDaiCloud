/* Pages/Index/index.wxss */
/* @import "../Lib/weui.wxss"; */
.logo {
  text-align:center;
  padding-top:50rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #AAA
}
.logo image {
  width: 250rpx;
  height: 250rpx;
}

.input-placeholder {
  font-size: 30rpx;
}

.search-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #3481EB;
  color: #FFF;
  height: 80rpx;
  padding: 10rpx 20rpx;
  z-index: 100
}
.search-container input {
  background: #FFF;
  color: #AAA;
  padding: 5px 70rpx;
  height: 40rpx;
  width: 100%;
  border-radius: 8rpx;
  z-index: -1
}
.search-container icon.search {
  position: absolute;
  z-index: 10;
  top: 50%;
  margin-top: -20rpx;
  left: 35rpx;
}
.search-container icon.close {
  position: absolute;
  z-index: 10;
  top: 50%;
  margin-top: -23rpx;
  right: 40rpx;
}
.list-item {
  position: relative;
  overflow: hidden
}
.index-list-item {
  background: #FFF;
  padding: 15rpx 30rpx;
  overflow: hidden;
  border-bottom: 1px #d3d3d3 solid
}
.index-list-item .cover {
  float: left;
  width: 220rpx;
  height: 260rpx;
  overflow: hidden
}
.index-list-item .cover image.cover-img {
  width: 220rpx;
  height: 260rpx
}
.index-list-item .content {
  margin-left: 250rpx
}
.index-list-item .title {
  font-size: 35rpx;
  display: inline-block;
  height: 40rpx;
  overflow: hidden;
}
.index-list-item .genres {
  display: block;
  font-size: 30rpx;
  padding: 5rpx 0 5rpx 0;
  color: #AAAAAA;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.index-list-item .rating , .index-list-item .country {
  font-size: 35rpx;
  color: rgb(5, 78, 180)
}
.index-list-item .summary {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 15rpx 0 15rpx 0;
}
.index-list-item .durations{
  font-size: 35rpx;
  padding: 10rpx 0 10rpx 0;
}