/* Pages/MovieDetail/moviedetail.wxss */
.content {
    background:#3a3a3a;
    height: 100%;
    padding-top:20rpx;
    padding-bottom:150rpx;
}
.movie_detail_item image {
  width: 100%;
  display: flex;
  margin-bottom:20rpx;
  justify-content: center
}
.movie_detail_item .detail {
    padding:0 20rpx;
    color:#fff;
    font-size:12px;
    line-height:20px;
}
.movie_detail_item .detail .rating {
    color:#379D31;
    font-size:16px;
    font-weight:900;
}
.movie_detail_item .summary view {
    color:#ff9800;
    font-size:16px;
    font-weight:900;
    padding-left: 20rpx;
}
.movie_detail_item .summary text {
  padding:0 20rpx;
  text-indent: 2em;
  font-size:12px;
  color: #fff;
}
